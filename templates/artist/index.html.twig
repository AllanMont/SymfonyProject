{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Pseudo</th>
                <th>DateNaissance</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.nom }}</td>
                <td>{{ artist.prenom }}</td>
                <td>{{ artist.pseudo }}</td>
                <td>{{ artist.dateNaissance ? artist.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ artist.description }}</td>
                <td>
                    <a href="{{ path('app_artist_show', {'id': artist.id}) }}">show</a>
                    <a href="{{ path('app_artist_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_artist_new') }}">Create new</a>
{% endblock %}
